<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Bar -->
    <View
        android:id="@+id/top_bar"
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="#6c63ff"/>

    <TextView
        android:id="@+id/headerText"
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="#6c63ff"
        android:text="SINH VIÊN"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:gravity="center"/>

    <!-- List Title -->
    <View
        android:id="@+id/list_title_bar"
        android:layout_width="372dp"
        android:layout_height="25dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="196dp"
        android:background="#6c63ff"/>

    <TextView
        android:id="@+id/list_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="196dp"
        android:text="Danh sách tất cả sinh viên"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center"/>

    <!-- Buttons -->

    <Button
        android:id="@+id/button_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="Tất cả"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_staying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="116dp"
        android:layout_toEndOf="@+id/button_all"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="Đang ở"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="42dp"
        android:layout_toEndOf="@+id/button_staying"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="Đã ra khởi"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-38dp"
        android:layout_marginTop="116dp"
        android:layout_toEndOf="@+id/button_left"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="Hoạt động"
        android:textColor="@android:color/white" />

</RelativeLayout>
