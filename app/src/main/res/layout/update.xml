<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="428dp"
    android:layout_height="926dp"
    android:background="#FFFFFF">

    <!-- Top Center Box with Title -->
    <RelativeLayout
        android:id="@+id/top_center_box"
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:background="#6c63ff">

        <TextView
            android:id="@+id/home_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="#6C63FF"
            android:gravity="center"
            android:text="ĐIỆN NƯỚC"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

    </RelativeLayout>

    <!-- Filter Instructions -->
    <TextView
        android:id="@+id/filter_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hãy lọc theo yêu cầu của bạn"
        android:layout_marginTop="116dp"
        android:layout_marginStart="28dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Tầng Dropdown -->
    <RelativeLayout
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_marginTop="148dp"
        android:layout_marginStart="28dp">

        <TextView
            android:layout_width="138dp"
            android:layout_height="50dp"
            android:text="Tầng"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Replace this with your actual Spinner or custom dropdown implementation -->
        <Spinner
            android:id="@+id/tang_spinner"
            android:layout_width="192dp"
            android:layout_height="56dp"
            android:layout_marginStart="180dp"
            android:background="#f0f0f0" />
    </RelativeLayout>

    <!-- Thực trạng Dropdown -->
    <RelativeLayout
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_marginTop="216dp"
        android:layout_marginStart="28dp">

        <TextView
            android:layout_width="138dp"
            android:layout_height="50dp"
            android:text="Thực trạng"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Replace this with your actual Spinner or custom dropdown implementation -->
        <Spinner
            android:id="@+id/thuc_trang_spinner"
            android:layout_width="192dp"
            android:layout_height="56dp"
            android:layout_marginStart="180dp"
            android:background="#f0f0f0" />
    </RelativeLayout>

    <!-- Danh sách sinh viên đã đóng tiền dịch vụ -->
    <RelativeLayout
        android:layout_width="372dp"
        android:layout_height="25dp"
        android:layout_marginTop="284dp"
        android:layout_marginStart="28dp"
        android:background="#6c63ff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách sinh viên đã đóng tiền dịch vụ"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <!-- Save Button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="151dp"
        android:background="#6c63ff"
        android:text="Lưu"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>
